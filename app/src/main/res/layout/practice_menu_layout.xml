<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="請選擇要挑戰的範圍"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:id="@+id/listView" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp">
        <RadioGroup
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked = "true"
                android:text="10題 " />
            <RadioButton
                android:id="@+id/radio_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked = "true"
                android:text="20題 " />
            <RadioButton
                android:id="@+id/radio_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked = "true"
                android:text="30題 " />
            <RadioButton
                android:id="@+id/radio_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked = "true"
                android:text="全部 " />
        </RadioGroup>




    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前往挑戰!"
        android:id="@+id/practice_menu_button"
        android:layout_gravity="center_horizontal"
        android:onClick="ButtonClicked"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"></RelativeLayout>

</LinearLayout>
